apiVersion: v1
kind: Pod
metadata:
  name: amit5
  labels:
    app: amit5
spec:
  containers:
  - name: amit5
    image: nginx

kubectl apply -f amit.yaml
OR
kubectl create -f amit.yaml

## to delete po
kubectl delete po amit5
=============

apiVersion: apps/v1
kind: Deployment
metadata:
  name: amit5
  labels:
    app: amit5
spec:
  template:
    metadata:
      name: amit5
      labels:
        app: amit5
    spec:
     containers:
     - name: amit5
       image: nginx
  replicas: 1
  selector:
    matchLabels:
      app: amit5
--------------
docker run -itd --name amit -p 8080:80 nginx

apiVersion: v1
kind: Service
metadata:
  name: amit5-service
  labels:
    app: amit5
spec:
  type: NodePort
  ports:
    - port: 80
      name: http
  selector:
    app: amit5


kubectl get service

---------
vim db.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: db
  labels:
    app: db
spec:
  template:
    metadata:
      name: db
      labels:
        app: db
    spec:
     containers:
     - name: db
       image: bitnami/mariadb:latest
       ports:
        - containerPort: 3306
       env:
        - name: MARIADB_ROOT_PASSWORD
          value: "1234"
  replicas: 1
  selector:
    matchLabels:
      app: db


kubectl apply -f db.yaml
kubectl get po
kubectl exec -it db-74f77dd886-nh6lg -- bash
OR
