$ ~/bin/kubectl -n test create deployment mariadb --image=mariadb:latest --dry-run=client -o yaml > maraidb-deploy.yaml


$ cat maraidb-deploy.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: mariadb
  name: mariadb
  namespace: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mariadb
  template:
    metadata:
      labels:
        app: mariadb
    spec:
      containers:
      - image: bitnami/mariadb:latest
        name: mariadb
        env:
        - name: MARIADB_ROOT_PASSWORD
          value: "1234"
---
apiVersion: v1
kind: Service
metadata:
  namespace: test
  labels:
    app: mariadb-svc
  name: maraidb-svc
spec:
  ports:
  - port: 3306
    protocol: TCP
    targetPort: 3306
  type: NodePort
  selector:
    app: mariadb

$ kubectl -n test create -f maraidb-deploy.yaml

## To restart pod
$ kubectl -n test rollout restart deploy mariadb

$ kubectl -n test get po
NAME                       READY   STATUS              RESTARTS      AGE
mariadb-69c4596767-vq62z   1/1     Running             0             74m


$ kubectl -n test exec -it mariadb-69c4596767-vq62z -- mysql -u root -p1234
MariaDB [(none)]> show databases;
+--------------------+
