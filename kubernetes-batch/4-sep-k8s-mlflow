+--------------------+
| information_schema |
| mysql              |
| performance_schema |
| sys                |
| test               |
+--------------------+
5 rows in set (0.265 sec)

MariaDB [(none)]> exit;
Bye


$ kubectl -n test exec -it mariadb-69c4596767-vq62z -- hostname -i
10.244.0.84


$ cat mlflow-deploy-cmd.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: mlflow
  name: mlflow
  namespace: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mlflow
  template:
    metadata:
      labels:
        app: mlflow
    spec:
      containers:
      - image: ghcr.io/mlflow/mlflow:v2.1.1
        name: mlflow
        command: ["/bin/sh","-c"]
        args: ["pip install pymysql; mlflow server --host 0.0.0.0 -p 5100 --backend-store-uri mysql+pymysql://root:${DB_PASSWORD}@${DB_IP}:3306/test --default-artifact-root file:///var/mm/mlflow/artifacts"]
        env:
        - name: DB_PASSWORD
          value: "1234"
        - name: DB_IP
          value: "10.244.0.84"


$ kubectl -n test apply -f mlflow-deploy-cmd.yaml


$ kubectl -n test logs -f mlflow-885d97bc4-crdnm

$ cat mlflow-svc.yaml
apiVersion: v1
kind: Service
metadata:
  namespace: test
  labels:
    app: mlflow-svc
  name: mlflow-svc
spec:
  ports:
  - port: 5100
    protocol: TCP
    targetPort: 5100
  type: NodePort
  selector:
    app: mlflow

$ kubectl create -f mlflow-svc.yaml

$ kubectl -n test get svc
NAME          TYPE       CLUSTER-IP      EXTERNAL-IP   PORT(S)          AGE
